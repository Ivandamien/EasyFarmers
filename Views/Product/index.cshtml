@model IEnumerable<EasyFarmers.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<!-- Hero Section for Products Page -->
<div class="position-relative mb-5" style="margin-left: -1.5rem; margin-right: -1.5rem; margin-top: -1.5rem;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: linear-gradient(rgba(46, 125, 50, 0.7), rgba(27, 94, 32, 0.8)), url('https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1') no-repeat center center; background-size: cover;"></div>
    <div class="container py-5 position-relative">
        <div class="row py-5">
            <div class="col-lg-8 col-md-10 mx-auto text-center text-white py-5">
                <h1 class="display-3 fw-bold mb-4">Explore Our Products</h1>
                <p class="lead mb-4">High-quality farming products to boost your agricultural productivity</p>
            </div>
        </div>
    </div>
</div>

<!-- Product Listing Section -->
<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h2 class="fw-bold text-success">Our Farming Products</h2>
            <p class="text-muted">Quality tools, seeds, and supplies for modern agriculture</p>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-img-container" style="height: 200px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/images/no-image.png" class="card-img-top" alt="No Image" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-success">@item.Name</h5>
                        <p class="card-text flex-grow-1">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="h5 text-primary mb-0">$@item.Price.ToString("F2")</span>
                            <span class="badge bg-success">In stock: @item.StockQuantity</span>
                        </div>

                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="mt-3 w-100">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-cart-plus me-2"></i>Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Call to Action -->
<div class="bg-success text-white py-5 mt-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="fw-bold">Need Help Choosing the Right Products?</h2>
                <p class="lead mb-0">Our agricultural experts are here to guide you.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <a href="#services" class="btn btn-light btn-lg">
                    <i class="fas fa-headset me-2"></i>Contact Us
                </a>
            </div>
        </div>
    </div>
</div>