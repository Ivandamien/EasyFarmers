@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Manage System Users";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex align-items-center">
                <div class="rounded-circle bg-success bg-opacity-10 p-2 me-3">
                    <i class="fas fa-users text-success" style="font-size: 1.2rem;"></i>
                </div>
                <h2 class="mb-0 text-success">Manage System Users</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div>
                    <span class="badge bg-success rounded-pill">
                        <i class="fas fa-user-check me-1"></i>
                        @Model.Count() Total Users
                    </span>
                </div>
                <div>
                    <button class="btn btn-success" type="button">
                        <i class="fas fa-user-plus me-2"></i>Add New User
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                    <tr>
                        <th scope="col" class="fw-bold">
                            <i class="fas fa-fingerprint text-muted me-2"></i>User ID
                        </th>
                        <th scope="col" class="fw-bold">
                            <i class="fas fa-user text-muted me-2"></i>Username
                        </th>
                        <th scope="col" class="fw-bold">
                            <i class="fas fa-envelope text-muted me-2"></i>Email Address
                        </th>
                        <th scope="col" class="fw-bold">
                            <i class="fas fa-shield-alt text-muted me-2"></i>Roles
                        </th>
                        <th scope="col" class="fw-bold">
                            <i class="fas fa-cogs text-muted me-2"></i>Actions
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="small text-muted align-middle">@user.Id</td>
                            <td class="align-middle">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light p-2 me-2">
                                        <i class="fas fa-user text-success"></i>
                                    </div>
                                    <span>@user.UserName</span>
                                </div>
                            </td>
                            <td class="align-middle">@user.Email</td>
                            <td class="align-middle">
                                <span class="badge bg-secondary">User</span>
                            </td>
                            <td class="align-middle">
                                <div class="btn-group" role="group">
                                    <button type="button" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-key me-1"></i>Roles
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-lock me-1"></i>Reset
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-ban me-1"></i>Disable
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center my-4">
                    <i class="fas fa-info-circle me-2"></i>
                    No users have been added to the system yet.
                </div>
            }
        </div>
        <div class="card-footer bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <span class="text-muted">
                        <i class="fas fa-shield-alt me-1"></i>
                        User management - Admin access only
                    </span>
                </div>
                <a href="#" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>